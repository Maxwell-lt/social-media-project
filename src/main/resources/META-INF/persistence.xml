<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="social-media-persistence">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>maxwell_lt.socialmediaproject.entity.Comment</class>
        <class>maxwell_lt.socialmediaproject.entity.Post</class>
        <class>maxwell_lt.socialmediaproject.entity.Postlikes</class>
        <class>maxwell_lt.socialmediaproject.entity.Purchase</class>
        <class>maxwell_lt.socialmediaproject.entity.User</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/socialmediaproject"/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.id.new_generator_mappings" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
